<div id="<%= dom_id delivery %>" class="my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= delivery.customer_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Courier:</strong>
    <%= delivery.courier_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Pickup:</strong>
    <%= delivery.pickup %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Delivered:</strong>
    <%= delivery.delivered %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Tariff:</strong>
    <%= delivery.tariff_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Invoiced:</strong>
    <%= delivery.invoiced? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Reimburse:</strong>
    <%= delivery.reimburse? ? "Yes" : "No" %>
  </div>
</div>

<%= form_with(model: delivery, class: "contents") do |form| %>
  <% if delivery.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(delivery.errors.count, "error") %> prohibited this delivery from being saved:</h2>

      <ul class="list-disc ml-6">
        <% delivery.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :customer_id %>
    <%= form.text_field :customer_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": delivery.errors[:customer_id].none?, "border-red-400 focus:outline-red-600": delivery.errors[:customer_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :courier_id %>
    <%= form.text_field :courier_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": delivery.errors[:courier_id].none?, "border-red-400 focus:outline-red-600": delivery.errors[:courier_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :pickup %>
    <%= form.datetime_field :pickup, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": delivery.errors[:pickup].none?, "border-red-400 focus:outline-red-600": delivery.errors[:pickup].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :delivered %>
    <%= form.datetime_field :delivered, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": delivery.errors[:delivered].none?, "border-red-400 focus:outline-red-600": delivery.errors[:delivered].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tariff_id %>
    <%= form.text_field :tariff_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": delivery.errors[:tariff_id].none?, "border-red-400 focus:outline-red-600": delivery.errors[:tariff_id].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :invoiced %>
    <%= form.checkbox :invoiced, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": delivery.errors[:invoiced].none?, "border-red-400 focus:outline-red-600": delivery.errors[:invoiced].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :reimburse %>
    <%= form.checkbox :reimburse, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": delivery.errors[:reimburse].none?, "border-red-400 focus:outline-red-600": delivery.errors[:reimburse].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

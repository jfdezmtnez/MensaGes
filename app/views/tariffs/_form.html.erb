<%= form_with(model: tariff, class: "contents") do |form| %>
  <% if tariff.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(tariff.errors.count, "error") %> prohibited this tariff from being saved:</h2>

      <ul class="list-disc ml-6">
        <% tariff.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tariff.errors[:description].none?, "border-red-400 focus:outline-red-600": tariff.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :weight %>
    <%= form.text_field :weight, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tariff.errors[:weight].none?, "border-red-400 focus:outline-red-600": tariff.errors[:weight].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :distance %>
    <%= form.text_field :distance, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tariff.errors[:distance].none?, "border-red-400 focus:outline-red-600": tariff.errors[:distance].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration %>
    <%= form.time_field :duration, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tariff.errors[:duration].none?, "border-red-400 focus:outline-red-600": tariff.errors[:duration].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tariff.errors[:price].none?, "border-red-400 focus:outline-red-600": tariff.errors[:price].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
